{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "lldb launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/project.out",
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "osx": {
        "MIMode": "lldb",
        "environment": [
          {
            "name": "DYLD_LIBRARY_PATH",
            "value": "/usr/local/Cellar/opencv/4.3.0/lib"
          }
        ]
      },
      "externalConsole": false,
      "MIMode": "lldb"
    }
  ]
}
